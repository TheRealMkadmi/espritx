{% extends 'views/layouts/contentLayoutMaster.html.twig' %}

{% block title %}
  {{ 'Permission' }}
{% endblock %}

{% block vendor_style %}

{% endblock %}
{% block page_style %}
  <!-- Page css files -->
  <link rel="stylesheet" href="{{ asset('css/base/plugins/forms/form-validation.css') }}">
{% endblock %}

{% block content %}
  <h3>Add Permission</h3>
  <p>Add a new unit of case-by-case access</p>

  <div class="card">
    <div class="card-header">
      <h4 class="card-title">Permission Details</h4>
    </div>
    <div class="card-body">
      {{ form_start(form, {'action': path('permission_create'), 'method': 'POST'}) }}
        <div class="row">
          <div class="col-md-6 col-12">
            <div class="mb-2">
              {{ form_row(form.title)}}
            </div>
          </div>
          <div class="col-md-6 col-12">
            <div class="mb-2">
              {{ form_row(form.description) }}
            </div>
          </div>
          <div class="col-md-6 col-12">
            <div class="mb-2">
              {{ form_row(form.subject) }}
            </div>
          </div>
          <div class="col-md-6 col-12">
            <div class="mb-2">
              {{ form_row(form.attribute) }}
            </div>
          </div>
          <div class="col-md-6 col-12">
            <div class="mb-2">
              {{ form_row(form.enabled) }}
            </div>
          </div>
          <div class="col-md-6 col-12">
            <div class="mb-2">
              {{ form_row(form.expression) }}
            </div>
          </div>
          <div class="col-md-6 col-12">
            <div class="mb-2">
              {{ form_row(form.groups) }}
            </div>
          </div>
          <div class="col-md-6 col-12">
            <div class="mb-2">
              {{ form_row(form.users) }}
            </div>
          </div>
          <div class="float-end">
            {{ form_widget(form.reset) }}
            {{ form_widget(form.save) }}
          </div>
        </div>
      {{ form_end(form) }}
    </div>

  </div>

{% endblock %}

{% block vendor_script %}
  <script src="{{ asset('vendors/js/tables/datatable/responsive.bootstrap5.js') }}"></script>
  <script src="{{ asset('vendors/js/tables/datatable/buttons.bootstrap5.min.js') }}"></script>
  <script src="{{ asset('vendors/js/forms/validation/jquery.validate.min.js') }}"></script>
{% endblock %}
{% block page_script %}
  <script src="{{ asset('js/scripts/pages/modal-add-permission.js') }}"></script>
  <script src="{{ asset('js/scripts/pages/modal-edit-permission.js') }}"></script>
  <script src="{{ asset('js/scripts/pages/app-access-permission.js') }}"></script>
{% endblock %}
